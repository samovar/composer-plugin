{
    "name": "samovar/composer-plugin",
    "type": "composer-plugin",
    "description": "Composer plugin for php projects",
    "license": "MIT",
    "authors": [
        {
            "name": "samovar",
            "email": "prototype.denis@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "composer-plugin-api": "^1.1",
        "symfony/filesystem": "^3.4 | ^4.0 | ^5.0",
        "symfony/finder": "^3.4 | ^4.0 | ^5.0"
    },
    "require-dev": {
        "composer/composer": "^1.0.2",
        "friendsofphp/php-cs-fixer": "^2.15"
    },
    "autoload": {
        "psr-4": {
            "Samovar\\Composer\\": "src"
        }
    },
    "extra": {
        "class": "Samovar\\Composer\\Plugin"
    }
}
